<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_lecturer_detail"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="60dp"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.smartphone.neu.CareerKey.LecturerDetailActivity"
    tools:showIn="@layout/activity_lecturer_detail">

    <TextView
        android:id="@+id/LecturerEmail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="false"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/Name"
        android:layout_marginBottom="15dp"
        android:text="email"
        android:layout_toEndOf="@+id/emailTitle" />



    <TextView
        android:text="City: "
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/cityTitle"
        android:textAppearance="@android:style/TextAppearance.Material.Subhead"
        android:layout_alignBottom="@+id/LecturerImage"
        android:layout_alignEnd="@+id/emailTitle"
        android:layout_marginEnd="10dp" />

    <TextView
        android:text="School: "
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/schoolTitle"
        android:layout_alignBaseline="@+id/School"
        android:layout_alignBottom="@+id/School"
        android:layout_toEndOf="@+id/LecturerImage"
        android:layout_marginBottom="30dp"
        android:textAppearance="@android:style/TextAppearance.Material.Subhead" />

    <TextView
        android:text="Email: "
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/Name"
        android:layout_toEndOf="@+id/LecturerImage"
        android:id="@+id/emailTitle"
        android:textAppearance="@android:style/TextAppearance.Material.Subhead" />

    <TextView
        android:text="Name: "
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/LecturerImage"
        android:id="@+id/nameTitle"
        android:textAppearance="@android:style/TextAppearance.Material.Subhead" />

    <TextView
        android:id="@+id/Name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="false"
        android:layout_marginBottom="15dp"
        android:text="Name"
        android:layout_toEndOf="@+id/nameTitle" />

    <ImageView
        android:id="@+id/LecturerImage"
        android:layout_width="150dp"
        android:layout_height="150dp"

        android:src="@android:drawable/ic_menu_myplaces"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/School"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="School"
        android:layout_below="@+id/LecturerEmail"
        android:layout_alignParentEnd="true"
        android:layout_toEndOf="@+id/schoolTitle"
        android:layout_marginBottom="25dp"/>

    <TextView
        android:id="@+id/City"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="City"
        android:layout_alignBottom="@+id/cityTitle"
        android:layout_alignParentEnd="true"
        android:layout_toEndOf="@+id/cityTitle" />

</RelativeLayout>
