<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_lecturer_detail"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.smartphone.neu.CareerKey.LecturerDetailActivity"
    tools:showIn="@layout/activity_lecturer_detail">

    <TextView
        android:id="@+id/LecturerEmail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="false"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/Name"
        android:layout_marginBottom="30dp"
        android:layout_toRightOf="@+id/lecutrerImage"
        android:text="email" />

    <TextView
        android:id="@+id/School"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/LecturerEmail"
        android:layout_marginBottom="30dp"
        android:layout_toRightOf="@+id/lecutrerImage"
        android:text="School" />

    <TextView
        android:id="@+id/City"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/School"
        android:layout_centerHorizontal="false"
        android:layout_toRightOf="@+id/lecutrerImage"
        android:text="City" />

    <ImageView
        android:id="@+id/lecutrerImage"
        android:layout_width="150dp"
        android:layout_height="150dp"

        android:layout_alignParentStart="false"
        android:layout_alignParentTop="true"
        android:layout_marginBottom="20dp"
        android:src="@android:drawable/ic_menu_myplaces" />

    <TextView
        android:id="@+id/Name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="false"
        android:layout_marginBottom="30dp"
        android:layout_toRightOf="@+id/lecutrerImage"
        android:text="Name" />

</RelativeLayout>
