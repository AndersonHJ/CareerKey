<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    tools:context="com.smartphone.neu.CareerKey.PublishActivity"
    android:weightSum="1">

    <TextView
        android:text="Create an Activity"
        android:gravity="center"
        android:textSize="25dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textView2"
        android:layout_weight="0.14"/>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_marginTop="10pt">

        <TextView
            android:text="Activity Place:"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:id="@+id/activityPlace"
            android:textSize="15dp"
            android:layout_weight="1"/>

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:text="Name"
            android:ems="10"
            android:id="@+id/txtPlace" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_marginTop="10pt">

        <TextView
            android:text="Activity Date:"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:id="@+id/activityDate"
            android:textSize="15dp"
            android:layout_weight="1"/>

        <EditText
            android:id="@+id/txtDatePicker"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="#ffffff"
            android:hint="Select Date Picker"
            android:textColor="#F5F7FA"
            android:textColorHint="#656D78"
            android:textSize="15dp"
            android:textStyle="bold"
            android:layout_weight="2"/>

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_marginTop="10pt"
        >
        <TextView
            android:text="Activity Time:"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:id="@+id/activityTime"
            android:textSize="15dp"
            android:layout_weight="0.94"/>

        <EditText
            android:id="@+id/txtStartTime"
            android:layout_width="wrap_content"
            android:layout_weight="0.92"
            android:layout_height="wrap_content"
            android:textSize="15dp"/>

        <TextView
            android:text="    ---"
            android:layout_width="38dp"
            android:layout_height="wrap_content"
            android:id="@+id/txtTimeLine"
            android:textSize="15dp"
            />
        <EditText
            android:id="@+id/txtEndTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1.78"
            android:textSize="15dp"/>

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_marginTop="10pt"
        >

        <TextView
            android:text="No.People:"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:id="@+id/numberOfPeople"
            android:textSize="15dp"
            android:layout_weight="3.14"/>

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:id="@+id/txtNumberOfPeopel" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_marginTop="10pt"
        android:layout_weight="0.47">

        <TextView
            android:text="Description:"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:id="@+id/activityDescription"
            android:textSize="15dp"
            android:layout_weight="3"/>

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:inputType="textMultiLine"
            android:ems="10"
            android:id="@+id/txtDescription" />


    </LinearLayout>
    <RelativeLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_marginTop="10pt"
        android:layout_weight="0.47"
        android:weightSum="1">

        <Button
            android:text="Submit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btnSubmitActivity"
            android:onClick=""
            android:layout_centerInParent="true"
            android:layout_weight="0.15"/>


    </RelativeLayout>


</LinearLayout>
