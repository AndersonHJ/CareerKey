        android:layout_alignParentEnd="true"
        android:layout_marginEnd="74dp"
        android:layout_marginTop="55dp"/>

    <EditText
        android:id="@+id/txtUserSchool"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
